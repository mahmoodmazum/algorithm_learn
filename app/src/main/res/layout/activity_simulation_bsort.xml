                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:paddingLeft="5dp"
                android:text="end for"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

        </LinearLayout>
    </ScrollView>

