    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="1000000dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:layout_margin="@dimen/margin"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"></com.google.android.gms.ads.AdView>

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:paddingTop="15dp"
                android:text="bubbleSort(array, size)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="for i = 0 to size - 1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

            <TextView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:paddingLeft="25dp"
                android:text="for j = 0 to size - i - 1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

            <TextView
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:paddingLeft="50dp"
                android:text="if array[j] > array[j+1]"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

            <TextView
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:paddingLeft="75dp"
                android:text="swap(array[j], array[j+1])"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

            <TextView
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:paddingLeft="50dp"
                android:text="end if"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

            <TextView
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boxH"
                android:layout_margin="@dimen/margin"
                android:paddingLeft="25dp"
                android:text="end for"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/texSiz" />

            <TextView
                android:id="@+id/line8"
